<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_background"
                tools:context=".ui.home.DashboardHomeFragment">

                    <com.tce.teacherapp.util.CustomCircularImageView
                        android:id="@+id/img_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"/>



                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_settings">

                </androidx.appcompat.widget.AppCompatImageView>

            </RelativeLayout>

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:id="@+id/main_epoxy_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f8ff"
                android:visibility="visible">

            </com.airbnb.epoxy.EpoxyRecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@drawable/filters_sheet_background"
            android:orientation="vertical"
            app:behavior_fitToContents="true"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            android:visibility="gone"
            app:layout_behavior="com.tce.teacherapp.util.bottomSheet.BottomSheetBehavior">

            <View
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#e1e6f0" />

            <LinearLayout
                android:id="@+id/resource_container"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="30dp">

                <com.tce.teacherapp.util.RubikBoldTextview
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_dummy_jr"
                    android:gravity="center"
                    android:text="JR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12_dp" />

                <com.tce.teacherapp.util.RubikMediumTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Junior KG A"
                    android:textColor="@color/color_black">

                </com.tce.teacherapp.util.RubikMediumTextview>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e6f0" />

            <LinearLayout
                android:id="@+id/photo_container"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="30dp">

                <com.tce.teacherapp.util.RubikBoldTextview
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_dummy_jr"
                    android:gravity="center"
                    android:text="JR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12_dp" />

                <com.tce.teacherapp.util.RubikMediumTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Junior KG B"
                    android:textColor="@color/color_black"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e6f0" />

            <LinearLayout
                android:id="@+id/voice_container"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp">

                <com.tce.teacherapp.util.RubikBoldTextview
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_dummy_jr"
                    android:gravity="center"
                    android:text="SR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12_dp" />

                <com.tce.teacherapp.util.RubikMediumTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Senior KG A"
                    android:textColor="@color/color_black">

                </com.tce.teacherapp.util.RubikMediumTextview>

            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/top_container"
android:layout_width="match_parent"
android:layout_height="60dp"
android:background="@color/subject_actionbar_color">
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_thick_arrow_left" />

<androidx.appcompat.widget.AppCompatSpinner
    android:id="@+id/spn_division"
    android:layout_width="wrap_content"
    android:minHeight="40dp"
    android:minWidth="70dp"
    android:layout_toEndOf="@+id/tv_back"
    android:layout_centerVertical="true"
    android:layout_marginStart="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="20dp"
    android:spinnerMode="dropdown"
    android:overlapAnchor="false"
    android:background="@drawable/division_selector"
    android:layout_height="wrap_content" />

<com.tce.teacherapp.util.RubikBoldTextview
    android:id="@+id/toolbar_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:textColor="#ffffff"
    android:textAllCaps="false"
    android:textSize="16dp"
    android:text="@string/title_subjects" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/dummy_student" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filters_sheet_background"
    android:orientation="vertical"
    app:behavior_fitToContents="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:layout_marginBottom="100dp"
    app:layout_behavior="com.tce.teacherapp.util.bottomSheet.BottomSheetBehavior">

    <View
        android:layout_width="70dp"
        android:layout_height="8dp"
        android:background="#e1e6f0"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Filter Chats by"
        android:layout_marginTop="5dp"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="Recent Chats"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:text="Unread Chats"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Class Name"
        android:paddingBottom="20dp"
        android:textSize="18sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_messages"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_below="@+id/vw_notification"
        android:background="@drawable/ic_messages"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_alignWithParentIfMissing="true"/>
    <TextView
        android:layout_width="24dp"
        android:layout_below="@id/tv_messages"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp"/>

    <View
        android:id="@+id/vw_notification"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        android:layout_alignEnd="@+id/tv_messages"
        android:background="@drawable/yellow_round_count" />
</RelativeLayout>
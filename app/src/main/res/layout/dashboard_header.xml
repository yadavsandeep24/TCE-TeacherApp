<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff098"
    android:padding="20dp">

    <com.tce.teacherapp.util.CustomCircularImageView
        android:id="@+id/img_profile"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:src="@drawable/dummy_teacher_profile"></com.tce.teacherapp.util.CustomCircularImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_profile"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/img_profile"
        android:layout_alignTop="@+id/img_profile"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.tce.teacherapp.util.RubikBoldTextview
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Hi Payal !"
            android:textColor="@color/color_black"
            android:textStyle="bold">
        </com.tce.teacherapp.util.RubikBoldTextview>

        <com.tce.teacherapp.util.RubikMediumTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="last sync with In-Class App on 2 March 2020, 8 am"
            android:textStyle="bold"
            android:layout_marginTop="10dp">
        </com.tce.teacherapp.util.RubikMediumTextview>


    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/present_profile"/>

        <CheckBox
            android:id="@+id/chk_completed"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/checkbox_filled_selector"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">
        </CheckBox>


    </RelativeLayout>

    <com.tce.teacherapp.util.RubikMediumTextview
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:textColor="#232337"
        tools:text="Hello World"/>

</LinearLayout>
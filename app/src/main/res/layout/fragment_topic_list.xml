<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#fff0eb"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.subjects.SubjectListFragment">

        <RelativeLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/subject_actionbar_color">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_thick_arrow_left" />

            <com.tce.teacherapp.util.RubikBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="@dimen/font_size_16_dp"
                android:id="@+id/tv_topic_title" />
        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_topic"
            android:layout_below="@+id/top_container"
            app:queryBackground="@drawable/bg_white_rounded"
            android:background="@drawable/bg_grey_rounded"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:queryHint="Search Resource"
            android:layout_marginBottom="10dp"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/sv_topic" />

    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#f0f0ff"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.subjects.SubjectListFragment">

        <RelativeLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/subject_actionbar_color">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_division"
                android:layout_width="wrap_content"
                android:entries="@array/support_type"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                android:background="@drawable/division_selector"
                android:layout_height="wrap_content" />

            <com.tce.teacherapp.util.RubikBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:text="@string/title_subjects" />
        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_subjects"
            android:layout_below="@+id/top_container"
            app:queryBackground="@drawable/bg_white_rounded"
            android:background="@drawable/bg_grey_rounded"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:queryHint="Search Resource"
            android:layout_marginBottom="10dp"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rv_subjects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/sv_subjects" />

    </RelativeLayout>
</layout>
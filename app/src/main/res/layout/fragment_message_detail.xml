<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.messages.MessageListFragment">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/subject_actionbar_color"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_thick_arrow_left"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgMessage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgBack"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgMessage"
               android:layout_centerVertical="true"
                android:orientation="vertical">

                <com.tce.teacherapp.util.RubikBoldTextview
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"></com.tce.teacherapp.util.RubikBoldTextview>

                <com.tce.teacherapp.util.RubikRegularTextview
                    android:id="@+id/tvSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="subTitle"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"></com.tce.teacherapp.util.RubikRegularTextview>
            </LinearLayout>
        </RelativeLayout>


        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/rv_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_container"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_above="@+id/send_message"/>


        <RelativeLayout
            android:id="@+id/send_message"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentBottom="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAttachment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_attachment"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
               android:scaleType="fitXY" />

            <EditText
                android:layout_centerVertical="true"
                android:id="@+id/edtTypeMessage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Type your message"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imgAttachment"
                android:layout_toLeftOf="@+id/imgSendMessage"
                android:background="@drawable/bg_grey_rounded">


            </EditText>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSendMessage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send_message"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />

        </RelativeLayout>
    </RelativeLayout>


</layout>
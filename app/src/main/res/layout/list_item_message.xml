<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/main_container">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imgMessage"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/imgMessage"
        android:layout_alignBottom="@+id/imgMessage"
        android:layout_toLeftOf="@+id/tvTime">
    <com.tce.teacherapp.util.RubikMediumTextview
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_16_dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:text="title"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"></com.tce.teacherapp.util.RubikMediumTextview>

    <com.tce.teacherapp.util.RubikRegularTextview
        android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:textSize="@dimen/font_size_14_dp"
        android:text="detail"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"></com.tce.teacherapp.util.RubikRegularTextview>
    </LinearLayout>

    <com.tce.teacherapp.util.RubikRegularTextview
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="@dimen/font_size_14_dp"
        android:text="time"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgMessage"
        android:layout_marginLeft="10dp"></com.tce.teacherapp.util.RubikRegularTextview>

    <com.tce.teacherapp.util.RubikBoldTextview
        android:id="@+id/tvCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="@dimen/font_size_14_dp"
        android:textStyle="bold"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:background="@drawable/yellow_round_count"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/imgMessage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"></com.tce.teacherapp.util.RubikBoldTextview>


</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTCE" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@fonts/Rubik-Regular</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/resource_item_divider</item>
    </style>


    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Theme.Design.Light.RightSheetDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.RightSheetDialog</item>
        <item name="bottomAppBarStyle">@style/Widget.Design.RightSheet.Modal</item>
    </style>

    <style name="Animation.Design.RightSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/design_right_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/design_right_sheet_slide_out</item>
    </style>

    <style name="Animation.MaterialComponents.RightSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/mtrl_right_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/mtrl_right_sheet_slide_out</item>
    </style>

    <style name="Widget.Design.RightSheet.Modal" parent="android:Widget">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation" tools:ignore="NewApi">
            @dimen/design_right_sheet_modal_elevation
        </item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MaterialComponents.RightSheet" parent="Widget.Design.RightSheet.Modal">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@null</item>
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.RightSheet
        </item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation" tools:ignore="NewApi">
            @dimen/design_right_sheet_elevation
        </item>
    </style>

    <style name="Widget.MaterialComponents.RightSheet.Modal" parent="Widget.MaterialComponents.RightSheet">
        <item name="android:elevation" tools:ignore="NewApi">
            @dimen/design_right_sheet_modal_elevation
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.RightSheet" parent="">
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>

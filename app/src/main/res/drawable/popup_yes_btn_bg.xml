<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
                <shape>
                    <gradient
                        android:startColor="#fa733c"
                        android:endColor="#fa4b28"
                        android:angle="270" />
                    <corners
                        android:radius="20dp"/>
                </shape>
    </item>

    <item android:state_pressed="true">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#88fa733c"
                        android:endColor="#88fa4b28"
                        android:angle="270" />
                    <corners
                        android:radius="20dp"/>
                </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#fafaff"
                        android:angle="270" />
                    <corners
                        android:radius="25dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
    </item>

    <item android:state_pressed="true">
                <shape>
                    <gradient
                        android:startColor="#fafaff"
                        android:endColor="#fafaff"
                        android:angle="270" />
                    <corners
                        android:radius="25dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
    </item>
</selector>
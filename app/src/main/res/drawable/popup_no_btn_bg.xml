<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#fafaff" android:startColor="#ffffff" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#EEEEF3" android:startColor="#EEEEF3" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#fa4b28" android:startColor="#fa733c"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#88fa4b28" android:startColor="#88fa733c" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
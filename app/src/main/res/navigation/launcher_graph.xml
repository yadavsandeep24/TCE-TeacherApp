<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tce.teacherapp.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_loginOptionFragment"
            app:destination="@id/loginOptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.tce.teacherapp.ui.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_childRelationFragment"
            app:destination="@id/childRelationFragment" />
    </fragment>
    <fragment
        android:id="@+id/childRelationFragment"
        android:name="com.tce.teacherapp.ui.login.ChildRelationFragment"
        android:label="fragment_child_relation"
        tools:layout="@layout/fragment_child_relation" >
        <action
            android:id="@+id/action_childRelationFragment_to_registerInfoFragment"
            app:destination="@id/registerInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerInfoFragment"
        android:name="com.tce.teacherapp.ui.login.RegisterInfoFragment"
        android:label="fragment_register_info"
        tools:layout="@layout/fragment_register_info" >
        <action
            android:id="@+id/action_registerInfoFragment_to_quickAccessSettingFragment"
            app:destination="@id/quickAccessSettingFragment" />
    </fragment>
    <fragment
        android:id="@+id/quickAccessSettingFragment"
        android:name="com.tce.teacherapp.ui.login.QuickAccessSettingFragment"
        android:label="fragment_quick_access_setting"
        tools:layout="@layout/fragment_quick_access_setting" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.tce.teacherapp.ui.login.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/loginOptionFragment"
        android:name="com.tce.teacherapp.ui.login.LoginOptionFragment"
        android:label="fragment_login_option"
        tools:layout="@layout/fragment_login_option" />
</navigation>